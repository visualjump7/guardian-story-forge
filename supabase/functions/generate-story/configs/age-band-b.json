{
  "version": "1.1",
  "app": {
    "name": "KidsStoryBuilder",
    "band": "B",
    "age_range": "8-10"
  },
  "model": {
    "name": "gemini-2.5-flash",
    "generationConfig": { "temperature": 0.7 }
  },
  "bands": {
    "B": {
      "words_total": [500, 700],
      "sentence_len": [10, 16],
      "pages": 22,
      "words_per_page": [24, 38],
      "dialog_ratio_target": 0.35,
      "subplot": { "enabled": true, "window_pages": [10, 14], "must_resolve_by": 20 },
      "safety": { "resolve_fear_within_pages": 2 }
    }
  },
  "art_policy": {
    "band_defaults": {
      "B": {
        "upfront_images": ["cover", "midpoint", "climax"],
        "max_images_per_story": 8
      }
    }
  }
}
